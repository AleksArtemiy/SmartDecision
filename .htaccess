RewriteEngine On

# Если файл или папка существуют - используем их
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Все остальные запросы перенаправляем на index.php
RewriteRule ^(.+)$ index.php [QSA,L]

# Безопасность
<Files "*.php">
    Order Allow,Deny
    Allow from all
</Files>

<Files "*.env">
    Order Deny,Allow
    Deny from all
</Files>